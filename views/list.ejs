<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>List</title>
    <link href="/styles.css" rel="stylesheet" />
  </head>

  <body class="grey-bg">
    <%- include("nav.ejs") %>

    <input class="search" />
    <button class="search-button">Search</button>

    <script>
      document
        .querySelector(".search-button")
        .addEventListener("click", function () {
          let input = document.querySelector(".search").value;
          location.href = "/search?val=" + input;
        });
    </script>

    <div class="white-bg">
      <% for (let i = 0; i < posts.length; i++) { %>
      <div class="list-box">
        <h4>
          <a href="/detail/<%= posts[i]._id %>"><%= posts[i].title %></a>
          <% if (user && user._id.toString() === posts[i].user.toString()) { %>
          <a href="/edit/<%= posts[i]._id %>">[Edit]</a>
          <span class="delete" data-id="<%= posts[i]._id %>">[Delete]</span>
          <% } %>
        </h4>
        <p><%= posts[i].content %></p>
      </div>
      <% } %>
    </div>

    <% for (let i = 1; i <= pages; i++) { %>
    <a class="page" href="/list/<%= i %>">[<%= i %>]</a>
    <% } %>

    <script>
      for (let i = 0; i < "<%= posts.length %>"; i++) {
        document
          .querySelectorAll(".delete")
          [i].addEventListener("click", function (e) {
            let id = e.target.dataset.id;
            fetch("/delete?id=" + id, { method: "DELETE" })
              .then((result) => {
                if (result.status === 200) {
                  return result.text();
                } else {
                  console.log("Internal Server Error");
                }
              })
              .then((result) => {
                e.target.parentElement.parentElement.style.display = "none";
              })
              .catch((error) => {
                console.log("There was an error,", error);
              });
          });
      }
    </script>
  </body>
</html>
