<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My-Chat-Rooms</title>
    <link href="/styles.css" rel="stylesheet" />
  </head>

  <body class="grey-bg">
    <% if (!user) { %> <%- include("nav.ejs") %> <% } %>
    <span></span>
    <% if (user) { %> <%- include("navi.ejs") %> <% } %>

    <span></span>
    <% if (chatList.length > 0) { %>
    <h4>My Chat Rooms</h4>
    <% } else { %>
    <h4>You have not participated in any chat rooms yet.</h4>
    <% } %>

    <div class="white-bg">
      <% for (let i = 0; i < chatList.length; i++) { %>
      <div class="list-box">
        <h4>
          <a href="/chat/detail/<%= chatList[i]._id %>">
            Chat Room <%= i+1 %>
          </a>
        </h4>
        <p>
          Participants:
          <strong>
            <%= chatList[i].usernames[0] %>, <%= chatList[i].usernames[1]%>
          </strong>
        </p>
      </div>
      <% } %>
    </div>
  </body>
</html>
